<h1>Корзина</h1>

<div id="card">
{{#if strats.length}}
<table>
    <thead>
        <tr>
            <th>Назваие стратегии</th>
            <th>Количество</th>
            <th>Действия</th>
        </tr>
    </thead>

    <tbody>
        {{#each strats}}
        <tr>
            <td>{{title_strat}}</td>
            <td>{{count}}</td>
            <td>
                <button
                 class="btn btn-small js-remove"
                  data-id="{{id}}"
                  data-csrf="{{@root.csrf}}"
                  >Удалить</button>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
    <p><strong>Цена: </strong><span class="price_strat">{{price_strat}}</span></p>
    <form action="/orders" method="POST">
        <input type="hidden" name="_csrf" value="{{csrf}}">
        <button type="submit" class="btn">Сделать заказ</button>
    </form>


{{else}}
<p>Корзина пуста</p>
{{/if}}
</div>



