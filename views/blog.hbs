<h1>Блог</h1>

<div class="add">
    <div class="row">

        <div class="col s12">
    <ul class="tabs">
        <li class="tab col s6"><a href="#post">Посты</a></li>
        <li class="tab col s6"><a class="active" href="#strat">Стратегии</a></li>
     </ul>
     </div>
    <br>

{{#if posts.length}}
<div id="post" class="col s12 offset-s0">
            <h1>Посты</h1>

  <div class="row">
      {{#each posts}} 
      <div class="col s3 m6">
        <div class="card blue-grey darken-1">
          <div class="card-content white-text">
            <span class="card-title">{{ title_post }}</span>
            <p>{{ descr_post }}</p>
          </div>
          <div class="card-action">

            <div class="card_container">

                <a class="waves-effect waves-light btn modal-trigger" id="modal_btn" href="#modal{{_id}}">Прочитать</a>
                {{#if @root.isAuth}}
                  {{#ifeq userId._id @root.userId}}
                      <a href="/blog/post/{{_id}}/edit?allow=true">Редактировать</a>
                  {{/ifeq}}
                {{/if}}

            </div>
            {{!-- <a href="/blog/post/{{_id}}" target = "_blank">Прочитать</a> --}}
          </div>
          
        </div>
      </div>
          <div id="modal{{_id}}" class="modal modal-fixed-footer">
              <div class="modal-content">
                <h4>{{ title_post }}</h4> 
                <p>{{ text_post }}</p> 
              </div>
              <div class="modal-footer">
                <a href="#!" class="modal-close waves-effect waves-green btn-flat">Закрыть</a>
              </div>
          </div>
      {{/each}}
   </div>
   
  {{else}}
  <div id="post" class="col s12 offset-s0">
      <p>Постов пока нет</p>
  </div>
{{/if}}  
</div>



{{#if strats.length}}
<div id="strat" class="col s12 offset-s0">
            {{!-- {{#if loginError}}
            <p class="alert">{{loginError}}</p>
            {{/if}} --}}
            <h1>Стратегии</h1>
    <div class="row">

    {{#each strats}}
     <div class="col s6 m6">
      <div class="card">
        <div class="card-image">
          <img class="img_strat" src="{{ img_strat }}" alt="{{ title_strat }}">
          
        </div>
        
        <div class="card-content">
            <span class="card-title">{{ title_strat }}</span>
            <p  class="price_strat">{{ price_strat }}</p>
            <p> Риск/Прибыль: {{risk}}/{{profit}}</p>
            
            {{#if type_of_risk }}
            <p>Высокорисковая</p>
            {{else}}
            <p>Консервативная</p>
            {{/if}}
        </div>
        
        <div class="card-action form_strat">

          <a href="/blog/strat/{{_id}}" target = "_blank">Посмотреть</a>
          {{#if @root.isAuth}}

            <form action="/card/add" method="POST">
                <input type="hidden" name="_csrf" value="{{@root.csrf}}">
                <input type="hidden" name="id" value="{{_id}}">
                <button type="submit" class="btn btn-primary">Купить</button>
            </form>
           
          {{/if}}
          
        </div>
    
      </div>
    </div>
    {{/each}}

      
    </div>
     {{else}}
     <div id="strat" class="col s12 offset-s0">
         <p>Стратегий пока нет</p>
     </div>

{{/if}}
  </div>
 
</div>



    </div>
</div>
