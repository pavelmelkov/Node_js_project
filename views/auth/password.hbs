<div class="row">
       
        <br>

        <div id="login" class="col s6 offset-s3">
            {{#if loginError}}
            <p class="alert">{{error}}</p>
            {{/if}}

            <h1>Установите новый пароль</h1>

        <form action="/auth/password" method="POST">

            <div class="input-field">
                <input id="password" name ="password" type="text" class="validate" required>
                <label for="password">Новый пароль</label>
                <span class="helper-text" data-error="need to input new password" minlength="2">Введите пароль</span>
            </div>

            <input type="hidden" name="_csrf" value="{{csrf}}">
            <input type="hidden" name="userId" value="{{userId}}">
            <input type="hidden" name="token" value="{{token}}">

            <button type="submit" class="btn btn-primary">Изменить</button>
        </form>

    </div>
</div>